<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FingerboardTimerActivity">

    <Button
            android:text="@string/start_workout_button"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_workout_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/current_action_text_view"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="287dp" android:textAlignment="center"/>
    <TextView
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/workout_status_text_view" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="107dp" android:textAlignment="center"/>
    <TextView
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/count_down_timer_text_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textSize="72sp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/workout_status_text_view"
            app:layout_constraintBottom_toTopOf="@+id/current_action_text_view"/>

</android.support.constraint.ConstraintLayout>